@model CheckOutModel
@using BookShoppingUI.Constants

@{
    ViewData["Title"] = "CheckOut";
}

<h1>CheckOut</h1>

<form asp-action="CheckOut">
    <div class="py-2">
        <label asp-for="Name">Name*</label>
        <input type="text" class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="py-2">
        <label asp-for="Email">Email*</label>
        <input type="text" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="py-2">
        <label asp-for="Phone">Phone*</label>
        <input type="text" class="form-control" asp-for="Phone" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="py-2">
        <label asp-for="Address">Address*</label>
        <textarea rows="5" type="text" class="form-control" asp-for="Address"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="py-2">
        <span class="mr-2">Payment Method</span>
        <select asp-for="PaymentMethod" class="form-control">
            <option value="">Select Payment Method</option>
            @foreach (var item in Enum.GetNames(typeof(PaymentMethods)))
            {
                <option value="@item.ToString()">@item.ToString()</option>
            }
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <div class="py-2">
        <button type="submit" class="btn btn-primary">Next</button>
    </div>
</form>

